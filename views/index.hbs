<div class="frame">
    <img src="/images/Background.jpg" class="img-background" />
    <div>
        <div class="card shadow mx-auto">
            <div class="card-body d-flex flex-column align-items-center w-100">
                <h3 class="mt-5">Log In</h3>
                {{#if error}}
                <h6 class="mt-2 error">*Wrong Password or usename*</h6>
                {{/if}}
                <form id="logInForm" class="d-flex flex-column align-items-center w-75 mt-4" method="POST" action="/">
                    <div class="form-group w-100">
                        <label for="exampleInputText">Username</label>
                        <input type="text" name="username" class="form-control" id="exampleInputText">
                    </div>
                    <div class="form-group w-100">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" name="password" class="form-control" id="exampleInputPassword1">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.0/jquery.validate.min.js"></script>
<script>
    $(function () {
        $('#logInForm').validate({
            rules: {
                username: {
                    required: true,
                },
                password: {
                    required: true,
                    minlength: 6
                },
            },
            messages: {
                username: {
                    required: 'Your username is required.',
                },
                password: {
                    required: 'Your password is required.',
                    minlength: 'Your password must have at least 6 characters.'
                },
            },
            errorElement: 'small',
            errorClass: 'form-text text-danger',
        });
    })
</script>